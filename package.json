{
   "name": "sprint-4",
   "version": "1.0.0",
   "description": "",
   "scripts": {
      "start": "(npm run clear && npm run build && npm run copy) && npm run server",
      "deploy": "npm run clear && npm run build && npm run copy",
      "dev": "cross-env NODE_ENV=development webpack --mode development",
      "build": "cross-env NODE_ENV=production webpack --mode production",
      "dev-server": "cross-env NODE_ENV=development webpack serve --mode development --open",
      "clear": "rm -rf ./static/* ./build/*",
      "copy": "mkdir -p ./static/ && cp ./build/* ./static/",
      "server": "node ./server/index.js",
      "eslint": "eslint ./client/src --ext .js,.jsx,.ts,.tsx",
      "eslint:fix": "eslint ./client/src --ext .js,.jsx,.ts,.tsx --fix",
      "stylelint": "stylelint './client/src/**/*{.css,.scss}'",
      "stylelint:fix": "stylelint './client/src/**/*{.css,.scss}' --fix",
      "test": "echo 132;",
      "test:watch": "npm run test -- --watch",
      "prepare": "husky install"
   },
   "keywords": [],
   "author": "",
   "license": "ISC",
   "devDependencies": {
      "@babel/plugin-proposal-class-properties": "^7.13.0",
      "@babel/preset-env": "^7.14.1",
      "@babel/preset-typescript": "^7.13.0",
      "@types/uuid": "^8.3.0",
      "@typescript-eslint/eslint-plugin": "^4.23.0",
      "@typescript-eslint/parser": "^4.23.0",
      "babel-loader": "^8.2.2",
      "chai": "^4.3.4",
      "chai-spies": "^1.0.0",
      "clean-webpack-plugin": "*",
      "copy-webpack-plugin": "^8.1.1",
      "cross-env": "^7.0.3",
      "css-loader": "^5.2.4",
      "css-minimizer-webpack-plugin": "^2.0.0",
      "eslint": "^7.26.0",
      "eslint-config-airbnb": "^18.2.1",
      "eslint-config-airbnb-typescript": "^12.3.1",
      "eslint-config-prettier": "^8.3.0",
      "eslint-loader": "^4.0.2",
      "eslint-plugin-import": "^2.22.1",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-prettier": "^3.4.0",
      "file-loader": "^6.2.0",
      "html-webpack-plugin": "^5.3.1",
      "husky": "^6.0.0",
      "ignore-styles": "^5.0.1",
      "jsdom": "^16.5.3",
      "jsdom-global": "^3.0.2",
      "lint-staged": "^11.0.0",
      "mini-css-extract-plugin": "^1.6.0",
      "mocha": "^8.4.0",
      "mocha-jsdom": "^2.0.0",
      "npm-force-resolutions": "^0.0.10",
      "prettier": "^2.3.0",
      "sass": "^1.32.12",
      "sass-loader": "^11.1.0",
      "sinon": "^10.0.0",
      "sinon-chai": "^3.6.0",
      "stylelint": "^13.13.1",
      "stylelint-config-prettier": "^8.0.2",
      "stylelint-config-rational-order": "^0.1.2",
      "stylelint-config-standard": "^22.0.0",
      "stylelint-order": "^4.1.0",
      "stylelint-prettier": "^1.2.0",
      "stylelint-scss": "^3.19.0",
      "terser-webpack-plugin": "^5.1.1",
      "trim": "^1.0.1",
      "ts-node": "^9.1.1",
      "typescript": "^4.2.4",
      "webpack": "^5.37.0",
      "webpack-cli": "^4.7.0",
      "webpack-dev-server": "^3.11.2"
   },
   "dependencies": {
      "@fortawesome/fontawesome-free": "^5.15.3",
      "express": "^4.17.1",
      "uuid": "^8.3.2"
   },
   "mocha": {
      "spec": "./client/src/**/*.spec.{js,ts}",
      "require": [
         "ts-node/register",
         "mocha-jsdom",
         "jsdom-global/register",
         "ignore-styles",
         "chai-spies"
      ],
      "TS_NODE_IGNORE_DIAGNOSTICS": true,
      "TS_NODE_COMPILER_OPTIONS": {
         "module": "commonjs",
         "skipDefaultLibCheck": true
      }
   },
   "lint-staged": {
      "*.{js,ts}": [
         "npm run eslint"
      ],
      "*.{css,scss}": [
         "npm run stylelint:fix",
         "git add -A"
      ]
   }
}
